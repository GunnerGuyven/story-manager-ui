{
  "tailwindCSS.experimental.classRegex": [
    "[cC]lass\\w*\\s*(?:=|:)\\s*`([^`]*)`",
    "[cC]lass\\w*\\s*(?:=|:)\\s*'([^']*)'",
    "[cC]lass\\w*\\s*(?:=|:)\\s*\"([^\"]*)\"",
    // unescaped: [cC]lass\w*\s*(?:=|:)\s*
    //  suffixes: `([^`])` , '([^'])' , "([^"])"
    // if a variable has 'class' in the name, and is a string literal
    // treat the contents of that string as an html class attribute body
  ]
}